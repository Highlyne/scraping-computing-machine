 {{!-- page to show the saved articles --}}
{{#each saved}}
<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <div class="story-body" id={{this._id}}>
                    <span class="card-title">
                        <h1>
                            <a href="{{this.link}}" target="_blank">{{this.title}}</a>
                    </span>
                    <form action="/save/{{this._id}}" method="GET">
                        <button type="submit" class="waves-effect waves-light btn" id="status" value="{{this.status}}">{{this.status}}</button>
                        <button type="submit" formaction="/note/{{this.id}}" class="waves-effect waves-light btn" id="addnote-button" value="{{this._id}}">Add Note</button>
                    </form>
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}